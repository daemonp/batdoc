# Contributor: Damon Petta <d@disassemble.net>
# Maintainer: Damon Petta <d@disassemble.net>
pkgname=batdoc
pkgver=1.0.0
pkgrel=0
pkgdesc="cat(1) for doc, docx, xls, xlsx, pptx, and pdf -- renders to markdown with bat"
url="https://github.com/daemonp/batdoc"
arch="all"
license="MIT"
makedepends="
	cargo
	cargo-auditable
	"
subpackages="$pkgname-doc"
source="https://github.com/daemonp/batdoc/archive/v$pkgver/batdoc-$pkgver.tar.gz"
options="net"

export CARGO_PROFILE_RELEASE_OPT_LEVEL="z"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/batdoc -t "$pkgdir"/usr/bin/
	install -Dm644 target/man/batdoc.1 "$pkgdir"/usr/share/man/man1/batdoc.1
	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname/
	install -Dm644 README.md -t "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="
SKIP  batdoc-1.0.0.tar.gz
"
